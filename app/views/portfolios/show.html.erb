<div class="container">
  <div class="row">
    <div class="col-md-7">

      <%= image_tag @portfolio_item.main_image, class: "portfolio-image" unless @portfolio_item.main_image.nil? %>
    </div>
    <div class="col-md-5">
      <h1>
        <%= @portfolio_item.title %>
      </h1>
      <em><h3><%= @portfolio_item.subtitle %></h3></em>

      <p><%= @portfolio_item.body %></p>

      <hr>

      <h4>Technologies Used:</h4>
      <ul>
        <% @portfolio_item.technologies.each do |technology| %>
          <li>
            <%= technology.name %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
