
<h1>Title:
  <%= @portfolio_item.title %>
</h1>

<%= image_tag @portfolio_item.main_image unless @portfolio_item.main_image.nil? %>

<em>
  <h3>
  <%= @portfolio_item.subtitle %>
  </h3>
</em>

<p>
  <%= @portfolio_item.body %>
</p>

<br>

<h2>Technologies Used:</h2>
<ul>
  <% @portfolio_item.technologies.each do |technology| %>
    <li>
      <%= technology.name %>
    </li>
  <% end %>
</ul>


<%= link_to 'Edit', edit_portfolio_path(@portfolio_item) %> |
<%= link_to 'Back', portfolios_path %>

<hr>

<%= params[:id] %>
