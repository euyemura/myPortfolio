<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-7">

      <%= image_tag portfolio_img(@portfolio_item.main_image_url, "main"), class: "portfolio-image", width: "100%" %>
    </div>
    <div class="col-md-5">
      <h1>
        <%= @portfolio_item.title %>
      </h1>
      <em><h3><%= @portfolio_item.subtitle %></h3></em>

      <p><%= @portfolio_item.body %></p>

      <hr>

      <h4>Technologies Used:</h4>
      <ul>
        <% @portfolio_item.technologies.each do |technology| %>
          <li>
            <%= technology.name %>
          </li>
        <% end %>
      </ul>
      <% if logged_in?(:site_admin) %>
      <div>
        <%= link_to "Edit Item", edit_portfolio_path(@portfolio_item), class: 'btn btn-warning' %>
      </div>
      <% end %>
    </div>
  </div>
</div>
