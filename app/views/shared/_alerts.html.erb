<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], image: image_url("yoshi.png"), sticky: false, time: 3000) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], image: image_url("yoshi.png"),title: "Uh oh", sticky: false, time: 3000) %>
<% else %>
  <%= js add_gritter(flash[:notice], image: image_url("yoshi.png"),sticky: false, time: 3000) %>
<% end %>
