<!-- start of sidebar -->
<div class="col-sm-3 offset-sm-1 blog-sidebar">
  <div class="sidebar-module sidebar-module-inset">
    <h4>About</h4>
    <p>Some blogs talking about meditation, mindfulness, tech, and that's probably it.</p>
  </div>
    <%= source_helper("alert alert-primary blog-sidebar-source") %>

  <div class="sidebar-module">
    <h4>Topics</h4>
    <ol class="list-unstyled">
      <% @side_bar_topics.each do |topic| %>
        <li><%= link_to topic.title, topic %></li>
      <% end %>
    </ol>
    <h4>Elsewhere</h4>
    <ol class="list-unstyled social-links">
      <li><a target="_blank" href="https://github.com/euyemura"><%= fa_icon "github"%></a></li>
      <li><a href="https://www.linkedin.com/in/eric-uyemura/"><%= fa_icon "linkedin"%></a></li>
    </ol>
  </div>
</div><!-- /.blog-sidebar -->
