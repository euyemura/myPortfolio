<div class="blog-post">
  <h2 class="blog-post-title"><%= link_to topic.title, topic %></h2>
  <p class="blog-post-meta">Published: <%= distance_of_time_in_words(topic.created_at, Time.now) %> ago</p>

  <% if logged_in?(:site_admin) %>
  <%= link_to topic.status, toggle_status_topic_path(topic) %> |
  <%= link_to "Edit", edit_topic_path(topic)%> |
  <%= link_to 'Delete Post', topic, method: :delete, data: { confirm: 'Are you sure?' }%>
  <% end %>
  <p><%= topic.body %></p>
</div><!-- /.blog-post -->
